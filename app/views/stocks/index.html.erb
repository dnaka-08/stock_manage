<div class="row justify-content-center mb-4">
  <h1>在庫一覧（日単位）</h1>
</div>
<div class="row justify-content-start offset-sm-3">
  <h4>店舗名：<%= @store.name %></h2>
</div>
<div class="row justify-content-start mb-4 offset-sm-3">
  <h4>商品名：<%= @product.name %></h2>
</div>

<% if @stocks.any? %>
  <div class="row justify-content-center">
      <%= high_chart("sample", @sample) %>
      <table class="table table-striped table-bordered col-sm-6">
        <thead>
          <tr>
            <th>日付</th>
            <th>在庫数</th>
          </tr>
        </thead>
        <tbody>
          <% @stocks.each do |stock| %>
            <tr>
              <td><%= stock.date %></td>
              <td><%= link_to stock.total_number, stock_details_path(:store_id => stock.store_id, :product_id => stock.product_id, :date => stock.date) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
 
  <div class="row justify-content-start">
    <div class="offset-sm-7">
      <%= paginate @stocks %>
    </div>
  </div>  
<% end %>