<div class="row justify-content-center">
  <% if params[:screen_id] == "1" %>
    <h1>商品一覧(在庫管理)</h1>
  <% elsif params[:screen_id] == "2" %>
    <h1>商品一覧(出庫管理)</h1>
  <% end %>
</div>

<% if @products.any? %>
  <div class="row justify-content-center">
      <table class="table table-bordered col-sm-6">
        <thead class="thead-light">
          <tr>
            <th>商品名</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <% if params[:screen_id] == "1" %>
                <td><%= link_to product.name, mng_tables_path(params: {product_id: product.id}) %></td>
              <% elsif params[:screen_id] == "2" %>
                <td><%= link_to product.name, output_mng_talbles_path(params: {product_id: product.id}) %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
 
  <div class="row justify-content-start">
    <div class="offset-sm-7">
      <%= paginate @products %>
    </div>
  </div>  
<% end %>