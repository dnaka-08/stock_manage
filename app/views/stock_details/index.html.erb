<div class="row justify-content-center mb-4">
  <h1>詳細一覧</h1>
</div>
<div class="row justify-content-start offset-sm-3">
  <h4>店舗名：<%= @store.name %></h2>
</div>
<div class="row justify-content-start offset-sm-3">
  <h4>商品名：<%= @product.name %></h2>
</div>
<div class="row justify-content-start mb-4 offset-sm-3">
  <h4>日付：<%= @date %></h2>
</div>

<% if @stock_details.any? %>
  <div class="row justify-content-center">
      <table class="table table-striped table-bordered col-sm-6">
        <thead>
          <tr>
            <th>更新日時</th>
            <th>入庫/出庫/破棄</th>
            <th>数</th>
            <th class="text-center" width="20%">削除</th>
          </tr>
        </thead>
        <tbody>
          <% @stock_details.each do |stock_detail| %>
            <tr>
              <td><%= stock_detail.updated_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
              <td><%= stock_detail.operation_name %></td>
              <td><%= stock_detail.number %></td>
              <td class="text-center" width="20%"><%= link_to '削除', stock_detail, method: :delete, data: { confirm: '削除してもよろしいですか？' }, class: 'btn btn-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
 
  <div class="row justify-content-start">
    <div class="offset-sm-7">
      <%= paginate @stock_details %>
    </div>
  </div>  
<% end %>