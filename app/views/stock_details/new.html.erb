<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(model: @stock_detail, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
    
      <div class="form-group">
        <%= f.label :store_id, '対象店舗' %>
        <%= f.collection_select :store_id, Store.all, :id, :name, :include_blank => true %>
      </div>
      <div class="form-group">
        <%= f.label :product_id, '対象商品' %>
        <%= f.collection_select :product_id, Product.all, :id, :name, :include_blank => true %>
      </div>
      <div class="form-group">
        <%= f.label :date, '日付' %>
        <%= f.date_select :date, class: 'form-control', :use_month_numbers => true %>
      </div>
      <div class="form-group">
        <%= f.label :operation_id, '入庫／出庫／破棄' %>
        <%= f.collection_select :operation_id, Operation.all, :id, :name, :include_blank => true %>
      </div>
      <div class="form-group">
        <%= f.label :number, '入庫／出庫／破棄数' %>
        <%= f.text_field :number, class: 'form-control' %>
      </div>
      
      <%= f.hidden_field :user_id, :value => session[:user_id] %>

      <%= f.submit '新規登録', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>