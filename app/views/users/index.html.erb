<div class="row justify-content-center">
  <h1>ユーザ一覧</h1>
</div>

<div class="row justify-content-start mb-2">
  <%= link_to '新規登録', signup_path, class: 'btn btn-primary offset-sm-8' %>
</div> 

<% if @users.any? %>
  <div class="row justify-content-center">
      <table class="table table-striped table-bordered col-sm-6">
        <thead>
          <tr>
            <th>ユーザ名</th>
            <th class="text-center" width="20%">削除</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= link_to user.name, edit_user_path(user) %></td>
              <td class="text-center" width="20%"><%= link_to '削除', user, method: :delete, data: { confirm: '削除してもよろしいですか？' }, class: 'btn btn-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
 
  <div class="row justify-content-start">
    <div class="offset-sm-7">
      <%= paginate @users %>
    </div>
  </div>  
<% end %>