<div class="row justify-content-center">
  <h1>商品一覧</h1>
</div>

<div class="row justify-content-start mb-2">
  <%= link_to '新規登録', new_product_path, class: 'btn btn-primary offset-sm-8' %>
</div> 

<% if @products.any? %>
  <div class="row justify-content-center">
      <table class="table table-striped table-bordered col-sm-6">
        <thead>
          <tr>
            <th>商品名</th>
            <th class="text-center" width="20%">削除</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= link_to product.name, edit_product_path(product) %></td>
              <td class="text-center" width="20%"><%= link_to '削除', product, method: :delete, data: { confirm: '削除してもよろしいですか？' }, class: 'btn btn-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
 
  <div class="row justify-content-start">
    <div class="offset-sm-7">
      <%= paginate @products %>
    </div>
  </div>  
<% end %>